
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
<%= simple_form_for [ slide, comment ], remote: true do |f| %>
  <div class="login-container">
    <h1>Post your comments!</h1>
      <div class="form-inputs">
        <%= f.input :content, label: false, placeholder: "leave your comment", required: true, error: 'Please enter your comment', autofocus: true %>
        <%= f.input :color, label: false, placeholder: "choose a color", collection: ['- select color -', 'red', 'blue', 'green', 'yellow', 'pink', 'red', 'white', 'black'], selected: "- select color - ", class: "form-control" %>
      </div>
      <div class="loginbtn">
        <%= button_tag type: 'submit', id: 'submit-btn',class: 'submit-btn' do%>
          <i class="fab fa-rocketchat"></i> Shoot Your Comment
        <% end %>
      </div>
  </div> <!-- login-container -->

<% end %>



<% if comment.errors.any? %>
  <div class="errors-container">
    <ul>
      <% comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

