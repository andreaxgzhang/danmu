<style type="text/css">
  .rocket-shoot {
    animation: ShootUp 3s linear 1;
    position: absolute;
    left: calc(50% - 50px);
    bottom: -200px;
    width: 100px;
  }

  .rocket-hide {
    display: none;
  }
@keyframes ShootUp {
  0% {
    bottom: -200px;
  }
  10% {
    bottom: 50px;
    transform: scale(1.2)
  }
  20% {
    bottom: 500px;
    transform: scale(2)
  }
  100% {
    bottom: 3000px;
    transform: scale(5)
  }
}

</style>

  <%= image_tag("rocket.png", {:class => "rocket-hide", :id => "rocket"}) %>

